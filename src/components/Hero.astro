---
interface Props {
  title: string;
  excerpt: string;
  image: string;
  slug: string;
  category: string;
}

const { title, excerpt, image, slug, category } = Astro.props;
---

<section class="hero">
  <div class="hero-image-container">
    <img src={image} alt={title} class="hero-image" />
    <div class="hero-overlay"></div>
  </div>
  <div class="container hero-content">
    <span class="category-tag">{category}</span>
    <h1 class="hero-title"><a href={`/news/${slug}`}>{title}</a></h1>
    <p class="hero-excerpt">{excerpt}</p>
    <a href={`/news/${slug}`} class="read-more">Read Full Story &rarr;</a>
  </div>
</section>

<style>
  .hero {
    position: relative;
    height: 600px;
    display: flex;
    align-items: flex-end;
    padding-bottom: var(--spacing-xl);
    overflow: hidden;
    margin-bottom: var(--spacing-xl);
  }

  .hero-image-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, rgba(15, 17, 21, 1) 0%, rgba(15, 17, 21, 0.4) 50%, rgba(15, 17, 21, 0.1) 100%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 800px; /* Constrain width for better readability */
    margin-left: auto; /* Center or align as needed, here keeping it left-aligned within container but container is centered */
    margin-right: auto;
    /* Resetting margin-left/right to match container behavior if needed, but container class handles it. 
       Let's just let container handle it. */
  }

  .category-tag {
    display: inline-block;
    background-color: var(--color-primary);
    color: #fff;
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    margin-bottom: var(--spacing-md);
  }

  .hero-title {
    font-size: 3.5rem;
    margin-bottom: var(--spacing-md);
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
  }

  .hero-excerpt {
    font-size: 1.2rem;
    color: #e0e0e0;
    margin-bottom: var(--spacing-lg);
    max-width: 600px;
    line-height: 1.6;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    font-weight: 600;
    color: #fff;
    border-bottom: 2px solid var(--color-accent);
    padding-bottom: 2px;
  }

  .read-more:hover {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .hero {
      height: 500px;
    }
    .hero-title {
      font-size: 2.5rem;
    }
  }
</style>
